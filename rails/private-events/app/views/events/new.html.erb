<% provide(:title, 'New Event') %>

<h1> Create a new event </h1>

<%= form_for(@event) do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  
  <%= f.label :location %>
  <%= f.text_field :location %>
  
  <br>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.submit "Create" %>
<% end %>