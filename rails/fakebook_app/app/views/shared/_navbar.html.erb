<!-- Navbar -->
<nav id="top-nav" class="navbar navbar-expand-lg navbar-light">
  <div class="container">

    <!-- Burger Button -->
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-brand">
      <%= link_to authenticated_root_path(current_user) do %>
        <span class="nav-brand-word">Fakebook</span>
      <% end %>
    </div><!-- end navbar-header -->

    <!-- Collapsible Nav -->
    <div id="navbarSupportedContent" class="collapse navbar-collapse">

      <!-- Search Bar -->
      <%= form_tag authenticated_root_path, :method => :get, class: "form-inline my-2 my-lg-0" do %>
        <%= text_field_tag(:search, params[:search], class:"form-control mr-sm-2", placeholder:"Search") %>
        <%= submit_tag("Search", name: nil, class:"btn btn-outline-success my-2 my-sm-0") %>
      <% end %><!-- end search bar -->

      <!-- Requests, Username, and Sign Out Links -->
      <ul class="nav navbar-nav navbar-right">

        <!-- Pending requests -->

        <li class="nav-element">
          <%= link_to authenticated_root_path(current_user) do %>
            <span class="glyphicon glyphicon-user nav-icon"></span>
            <%= current_user.full_name %>
          <% end %>
        </li>
        <li class="nav-element">
          <%= link_to destroy_user_session_path, :method => :delete do %>
            <span class="glyphicon glyphicon-log-out nav-icon"></span>
            Sign Out
          <% end %>
        </li>
      </ul>
    </div><!-- end collapsible nav -->

  </div><!-- end container -->
</nav><!-- end navbar -->