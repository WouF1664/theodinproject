<% if flash.any? %>
  <div class="row">
    <div class="col-12">
      <% flash.each do |type, msg| %>
        <% if type == "notice" %>
          <%= content_tag :div, msg, class: "flash success" %>
        <% elsif type == "alert" %>
          <%= content_tag :div, msg, class: "flash danger" %>
        <% else %>
          <%= content_tag :div, msg, class: "flash #{type}" %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>