<div class="container">

  <%= render partial: "users/shared/cover" %>

  <main id="timeline">
    <div class="row">

      <!-- Timeline -->
      <div class="col-sm-7 col-sm-push-5 col-md-8 col-md-push-4">
        <!-- Create Post -->
        <% if @new_post %>
          <%= render partial: "new_post",
                              :locals => { user: @user, post: @new_post } %>
        <% end %>
        <!-- Feed Posts -->
        <div id="posts-container">
          <%= render @posts %>
        </div>
      </div>
    
    </div>
  </main>

</div>
