<div data-id="<%= comment.id %>" data-type="Comment" class="row comment">
  <div class="col-12">
    <!-- Comment Author Image -->
    <div class="author-img box pull-left">
      <%= link_to comment.commenter do %>
        <%= image_tag comment.commenter.picture_url %>
      <% end %>
    </div>

    <!-- Comment Body -->
    <div class="comment-body pull-left">
      <!-- Comment Author Details -->
      <%= link_to comment.commenter.full_name, user_path(comment.commenter) %>
      <%= time_tag comment.created_at.to_date,
                   "Commented on #{date_to_string(comment.created_at)}",
                   class: "post-date inline" %>

      <!-- Comment Text -->
      <p><%= comment.body %></p>

      <!-- Comment Links -->
      <div class="comment-feedback">
        <div class="like-container">
          <%= render_like_link(comment) %>
        </div>
        <span class="feedback-container inline">
          <%= comment_feedback(comment) %>
        </span>
        <%= render_delete_link(comment) %>
      </div>    
    </div><!-- end comment body -->
  </div>
</div>