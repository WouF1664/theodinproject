<%= form_for [post, post.comments.build], :html => { class: "comment-form padding-top" }, remote: true do |f| %>
  <%= f.text_area :body, placeholder: "Write a comment", rows: 3 %>
  <%= link_to "Cancel", nil, class: "cancel-comment" %>
  <%= f.submit "Comment", class: "btn btn-md btn-primary pull-right" %>
<% end %>