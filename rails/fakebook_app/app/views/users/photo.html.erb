<div class="container">

  <%= render partial: "users/shared/cover" %>

  <main id="photos">
    <!-- Photo Profile Header -->
    <div class="row">
      <div class="box box-header header-title col">
        <header>
          <h2>Photo Profile</h2>
        </header>
      </div>
    </div><!-- end row -->

    <!-- Photo Profile Body -->
    <div class="row box padding-bottom box-body">
      <!-- Photo -->
      <div class="padding-top col-8">
        <%= image_tag(@user.picture_url, alt: "Profile Picture", class: "box photo-picture") if @user.picture? %>
      </div>
      <!-- Photo Upload Button -->
      <% if current_user == @user %>
        <div class="col-4 ">
          <h4 class="margin-top">Upload a Photo:</h4>
          <%= form_for(@user, url: registration_path(@user)) do |f| %>
            <div class="form-group">
              <%= f.file_field :picture, class:"form_control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Upload", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div><!-- end row -->

    <!-- Photo Cover Header -->
    <div class="row">
      <div class="box box-header header-title col">
        <header>
          <h2>Photo Cover</h2>
        </header>
      </div>
    </div><!-- end row -->

    <!-- Photo Cover Body -->
    <div class="row box padding-bottom box-body">
      <!-- Photo -->
      <div class="padding-top col-8">
        <%= image_tag(@user.cover_url, alt: "Cover Picture", class: "box photo-picture") if @user.cover? %>
      </div>
      <!-- Photo Upload Buttons -->
      <% if current_user == @user %>
        <div class="col-4">
          <h4 class="margin-top">Upload a Photo:</h4>
          <%= form_for(@user, url: registration_path(@user)) do |f| %>
            <div class="form-group">
              <%= f.file_field :cover, class:"form_control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Upload", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div><!-- end row -->
  </main>
</div>
