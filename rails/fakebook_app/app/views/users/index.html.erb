<div class="container">
  <main>
    <!-- Search Header -->
    <div class="row">
      <div class="box box-header header-title col">
        <header>
          <h2><%= pluralize(@users.count, 'Search Result') %></h2>
        </header>
      </div>
    </div><!-- end row -->

    <!-- Search Body -->
    <div class="row">
      <section class="box box-body padding-top padding-bottom col">
        <div class="row">
          
          <% if @users.count == 0 %>
            <p class="text-center margin-top padding-bottom col">
              No results by that name.
            </p>
          <% else %>
            <% @users.each do |user| %>
              <div class="col-12">
                <div class="box item-box">
                  <a href="#">
                    <div class="search-img">
                      <%= link_to user_path(user) do %>
                        <%= image_tag user.picture_url %>
                      <% end %>
                    </div>
                  </a>
                  <div class="search-details">
                    <%= link_to user.full_name, user_path(user) %>
                    <div class="search-friend-count">
                      <small>
                        <%= pluralize(user.friends.count, 'friend') %>
                      </small>
                    </div>
                  </div>
                  <%= render_add_friend_or_unfriend(user) %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </section>
    </div><!-- end row -->
  </main>
</div>
