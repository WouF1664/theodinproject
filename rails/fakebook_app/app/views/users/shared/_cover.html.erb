<section class="box">
  <div id="cover" class="row">
    <!-- Cover Image -->
    <div class="cover-img">
      <%= gravatar_for @user %>
    </div>
    <!-- Profile Image -->
    <div class="profile-img">
      <%= link_to user_path(user) do %>
        <%= image_tag user.full_name, alt: "Profile Picture" %>
      <% end %>
    </div>
    <!-- Cover Name -->
    <div class="cover-name">
      <h1><%= user.full_name %></h1>
    </div>
  </div>

  <div class="row">
    <nav id="main-nav">
      <ul class="navbar_nav">
        <%= content_tag :li,
            class: "nav_link" do %>
          <%= link_to "Timeline", user_path(user) %>
        <% end %><!--
        --><%= content_tag :li,
               class: "nav_link" do %>
          <%= link_to "About", user_path(user) %>
        <% end %><!--
        --><%= content_tag :li,
               class: "nav_link" do %>
          <%= link_to user_path(user) do %>
            Photos<small>(<%= user.full_name %>)</small>
          <% end %>
        <% end %><!--
        --><%= content_tag :li,
               class: "nav_link" do %>
          <%= link_to user_path(user) do %>
            Friends<small>(<%= user.full_name %>)</small>
          <% end %>
        <% end %>
      </ul>
      <!-- render_profile_or_friend_link(user) -->
    </nav>
  </div>
</section>
