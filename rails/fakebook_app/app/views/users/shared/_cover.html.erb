<section class="box">
  <div id="cover" class="row">
    <!-- Cover Image -->
    <div class="cover-img">
      <%= image_tag(@user.cover_url, alt: "Cover Picture") if @user.cover? %>
    </div>
    <!-- Profile Image -->
    <div class="profile-img">
      <%= image_tag(@user.picture_url, alt: "Profile Picture") if @user.picture? %>
    </div>
    <!-- Cover Name -->
    <div class="cover-name">
      <h1><%= @user.full_name %></h1>
    </div>
  </div>

  <div class="row">
    <nav id="main-nav">
      <ul class="navbar_nav">
        <%= content_tag :li,
            class: "nav_link" do %>
          <%= link_to "Timeline", user_path(@user) %>
        <% end %><!--
        --><%= content_tag :li,
               class: "nav_link" do %>
          <%= link_to "About", user_path(@user) %>
        <% end %><!--
        --><%= content_tag :li,
               class: "nav_link" do %>
          <%= link_to photo_path(@user) do %>
            Photos
          <% end %>
        <% end %><!--
        --><%= content_tag :li,
               class: "nav_link" do %>
          <%= link_to user_path(@user) do %>
            Friends<small>(<%= @user.full_name %>)</small>
          <% end %>
        <% end %>
      </ul>
      <!-- render_profile_or_friend_link(user) -->
    </nav>
  </div>
</section>
