<div class="container">

  <%= render partial: "users/shared/cover" %>

  <main id="profile">
    <!-- About Header -->
    <div class="row">
      <div class="box box-header header-title col">
        <header>
          <h2>About</h2>
            <%= link_to "Back", :back,
                 class: "btn btn-small btn-primary right" %>
        </header>
      </div>
    </div><!-- end row -->

    <!-- About Body -->
    <div class="row">
      <section class="box box-body padding-top padding-bottom col">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class:"edit-form"}) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="col form-horizontal">
            <h3>User Information</h3><br />

            <div class="form-group row">
              <div class="col-md-3">
              <%= f.label :first_name, class:""%>
              </div>
              <div class="col-md-9">
              <%= f.text_field :first_name, class:"", autofocus: true %>
            </div>

              <%= f.label :last_name, class:"col-md-3 control-label" %>
              <%= f.text_field :last_name, class:"col-md-9 form-control-static" %>

              <%= f.label :email %>
              <%= f.email_field :email %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off" %><i>(leave blank if you don't want to change it)</i>
                <% if @minimum_password_length %><br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              <%= f.label :password_confirmation %>
              <i>&nbsp;&nbsp;</i><%= f.password_field :password_confirmation, autocomplete: "off" %>

              <%= f.label :current_password %>
              </br><%= f.password_field :current_password, autocomplete: "off" %><i> &nbsp;(we need your current password to confirm your changes)</i>

              <%= f.label :about %>
              <%= f.text_field :about, class: "about-field" %>

              <div class="actions">
                <%= f.submit "Update" %>
              </div>
            </dl>
          </div>

          
        <% end %>

        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </section>
    </div><!-- end row -->

  </main>

</div>
