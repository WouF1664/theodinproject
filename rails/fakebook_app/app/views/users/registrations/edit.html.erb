<div class="container">

  <%= render partial: "users/shared/cover" %>

  <main>
    <!-- About Header -->
    <div class="row">
      <div class="box box-header header-title col">
        <header>
          <h2>About</h2>
            <%= link_to "Back", :back,
                 class: "btn btn-small btn-primary right" %>
        </header>
      </div>
    </div><!-- end row -->

    <!-- About Body -->
    <div class="row">
      <section class="box box-body padding-top padding-bottom col">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, class:"edit-form"}) do |f| %>
          <%= devise_error_messages! %>
          <div class="row">          
            <div class="col form-horizontal">
              <h3 class="col">User Information</h3><br />

              <div class="form-group">
                <div class="col-md-3 control-label">
                  <%= f.label :first_name %></div>
                <div class="col-md-9 ">
                  <%= f.text_field :first_name, class:"form-control", autofocus: true %></div>
              </div>

              <div class="form-group">
                <div class="col-md-3 control-label">
                  <%= f.label :last_name %></div>
                <div class="col-md-9">
                  <%= f.text_field :last_name, class:"form-control" %></div>
              </div>
                
              <div class="form-group">
                <div class="col-md-3 control-label">
                  <%= f.label :email %></div>
                <div class="col-md-9">
                  <%= f.email_field :email, class:"form-control" %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %></div>
              </div>

              <div class="form-group">
                <div class="col-md-3 control-label">
                  <%= f.label :about %></div>
                <div class="col-md-9">
                  <%= f.text_area :about, class:"form-control", :rows => '3' %></div>
              </div> 
              
              <div class="col-xs-6 offset-xs-3 col-md-3">
                <%= f.submit "Update", class:"btn btn-primary btn-lg btn-block" %>
              </div>
            </div>
          </div>
        <% end %>
      </section>
    </div><!-- end row -->
  </main>
</div>
