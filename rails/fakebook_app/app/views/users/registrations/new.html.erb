<div id="signup">
  <section class="main-bkg">
    <div class="main-container">

      <!-- Body -->
      <div class="col-left">
        <h2>Connect with friends and the<br>world around you on Fakebook</h2>
        <table class="feature">
          <tr>
            <td>
              <i class="fa fa-eye" aria-hidden="true"></i></td>
            <td>
              <span>See photos and posts</span>
              <span class="smaller">from your friends.</span>
            </td>
          </tr>
          <tr>
            <td>
              <i class="fa fa-share-alt" aria-hidden="true"></i></td>
            <td>
              <span>Share what's new</span>
              <span class="smaller">in your life with others.</span>
            </td>
          </tr>
          <tr>
            <td>
              <i class="fa fa-handshake-o" aria-hidden="true"></i></td>
            <td>
              <span>Make connections</span>
              <span class="smaller">by searching for people you know.</span>
            </td>
          </tr>
        </table>
      </div><!--
      --><div class="col-right">
        <h1>Sign Up</h1>
        <h3>Let's get started!</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <%= f.text_field :first_name, class: "input",
                                        placeholder: "First name" %>
          <%= f.text_field :last_name, class: "input",
                                       placeholder: "Last name" %>
          <%= f.text_field :email, class: "input",
                                   placeholder: "Email" %>
          <%= f.password_field :password, class: "input",
                                          placeholder: "Password" %>
          <%= f.password_field :password_confirmation, class: "input",
                               placeholder: "Password confirmation" %>
          
          <input id="button" class="highlight" type="submit" value="Sign Up">
        <% end %>
      </div><!-- end body -->
      
    </div>
  </section>
  <section class="login-footer">
    <p>A Social network written in Ruby on Rails by <%= link_to "Florian Mainguy", "https://github.com/florianmainguy" %>.</p>
    <hr>
  </section>
</div>
